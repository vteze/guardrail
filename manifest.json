{
  "manifest_version": 3,
  "name": "Guardrail",
  "version": "1.0.0",
  "description": "Protect your edge. Enforce your rules. Consistência no longo prazo começa com regras que você não pode quebrar.",
  "permissions": ["storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bet.br/*",

        "*://*.bet365.com/*",
        "*://*.betfair.com/*",
        "*://*.betano.com/*",
        "*://*.sportingbet.com/*",
        "*://*.pinnacle.com/*",
        "*://*.stake.com/*",
        "*://*.1xbet.com/*",
        "*://*.betway.com/*",
        "*://*.bwin.com/*",
        "*://*.williamhill.com/*",
        "*://*.superbet.com/*",
        "*://*.parimatch.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Guardrail",
    "default_icon": {
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "options/options.html"
}
